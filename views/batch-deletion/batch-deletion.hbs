{{#extend "lib/loggedin"}}
  {{#content "styles" mode="append"}}
    <link rel="stylesheet" href="/styles/batch-deletion/batch-deletion.css" />
  {{/content}}

  {{#content "scripts" mode="append"}}
      <script src="/scripts/batch-deletion/batch-deletion.js" type="module" defer></script>
      <script src="/scripts/batch-deletion/batch-deletion-upload.js" type="module" defer></script>
  {{/content}}

  {{#content "page"}}
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 no-padding">
          <button type="submit" class="btn btn-primary btn-add-modal--upload">
            Hinzuf√ºgen
          </button>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 no-padding">
          <ul class="batch-list">
            {{#each batches}}
              {{> "batch-deletion/partials/batch-list-item"}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    {{#embed "lib/components/modal-form" action="/batch-deletion" method="post" class="add-modal--upload"}}
			{{#content "fields"}}
				{{> "batch-deletion/forms/batch-deletion-upload"}}
			{{/content}}
		{{/embed}}
  {{/content}}
{{/extend}}