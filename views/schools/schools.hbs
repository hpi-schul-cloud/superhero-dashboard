{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/events/events.css"/>
        <link rel="stylesheet" href="/styles/schools/schools.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/schools.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-9"></div>
                    <div class="col-sm-3" style="padding-bottom: 20px">
                        <form class="search-wrapper" action="/schools/" method="get">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control search-field" placeholder="Suche nach Schulen... (Name)" name="q" />
                                <span class="input-group-btn">
                                            <button type="submit" class="btn btn-secondary">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-12 no-padding">
                        {{> "lib/components/table" head=head body=body}}
                    </div>
                </div>

                <button class="btn btn-primary btn-create-school">Neue Schule erstellen</button>

                <div class="row">
                    {{> "lib/components/pagination" settings=pagination }}
                </div>
            </div>

            {{#embed "lib/components/modal-form" federalState=federalState class="add-modal"}}
                {{#content "fields"}}
                    {{> "schools/forms/add-school"}}
                {{/content}}
            {{/embed}}
            {{#embed "lib/components/modal-form" federalState=federalState method="patch" class="edit-modal"}}
                {{#content "fields"}}
                    {{> "schools/forms/add-school"}}
                {{/content}}
            {{/embed}}
            {{#embed "lib/components/modal-form" roles=roles method="delete" class="delete-modal"}}
                {{#content "fields"}}
                    {{> "lib/components/delete-form"}}
                {{/content}}
            {{/embed}}
    {{/content}}
{{/extend}}
