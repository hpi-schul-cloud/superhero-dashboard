<div class="form-group">
    <label class="control-label" for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control" placeholder="Matrix Monday Fever" required>
</div>
<div class="form-group">
    <label class="control-label" for="federalState">Bundesland</label>
    <select name="federalState">
        {{#each federalState}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label class="control-label" for="fileStorageType">File-Storage-Typ</label>
    <select name="fileStorageType" type="text">
        {{#each storageType}}
            <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label class="control-label" for="storageProvider">Storage Provider</label>
    <select name="storageProvider" type="text">
        {{#each storageProvider}}
            <option value="{{this.value}}">{{this.label}}</option>
        {{/each}}
    </select>
</div>