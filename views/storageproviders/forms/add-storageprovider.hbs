<div class="form-group">
    <label class="control-label" for="type">Typ</label>
    <select name="type" required>
        {{#each types}}
            <option value="{{this.value}}">{{this.label}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label class="control-label">Soll der Provider von allen Schulen genutzt werden k√∂nnen?</label>
    <label  style="width: 100%">
        <input type="checkbox" name="isShared" value="1" class="form-control" style="width:10%;display:inline-block;">
        Ja, teilen
    </label>
</div>
<div class="form-group">
    <label class="control-label" for="endpointUrl">Endpunkt-URL</label>
    <input type="text" name="endpointUrl" id="endpointUrl" class="form-control" placeholder="" required>
</div>
<div class="form-group">
    <label class="control-label" for="accessKeyId">Access Key ID</label>
    <input type="text" name="accessKeyId" id="accessKeyId" class="form-control" placeholder="AKIAIOSFODNN7EXAMPLE"
           required>
</div>
<div class="form-group">
    <label class="control-label" for="secretAccessKey">Secret Access Key</label>
    <input type="text" name="secretAccessKey" id="secretAccessKey" class="form-control"
           placeholder="wJalrXUtnFEMI/K7MDENG/bPxRfiCYzEXAMPLEKEY" required>
</div>
<div class="form-group">
    <label class="control-label" for="maxBuckets">Maximale Anzahl Buckets</label>
    <input type="text" name="maxBuckets" id="maxBuckets" class="form-control" placeholder="" required>
</div>