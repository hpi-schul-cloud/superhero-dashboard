<input type="hidden" name="classOrSchoolId" value="{{schoolId}}" data-force-value="true" required>
<div class="form-group">
    <label class="control-label" for="edit-firstName">Vorname *</label>
    <input type="text" name="edit-firstName" id="firstName" class="form-control" placeholder="Rufus" required readonly>
</div>
<div class="form-group">
    <label class="control-label" for="edit-lastName">Nachname *</label>
    <input type="text" name="lastName" id="edit-lastName" class="form-control" placeholder="Everwood" required readonly>
</div>
<div class="form-group">
    <label class="control-label" for="edit-email">E-Mail *</label>
    <input type="text" name="email" id="edit-email" class="form-control" placeholder="rufus@everwood.com" required readonly>
</div>
<div class="form-group">
    <label class="control-label" for="edit-roles">Rollen *</label>
    <select id="edit-roles" name="roles" multiple required>
        {{#each role}}
            <option value="{{this.name}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>