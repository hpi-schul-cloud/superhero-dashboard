<div class="form-group">
    <label class="control-label" for="{{#if add}}add-{{/if}}firstName">Vorname *</label>
    <input type="text" name="firstName" id="{{#if add}}add-{{/if}}firstName" class="form-control" placeholder="Rufus" required>
</div>
<div class="form-group">
    <label class="control-label" for="{{#if add}}add-{{/if}}lastName">Nachname *</label>
    <input type="text" name="lastName" id="{{#if add}}add-{{/if}}lastName" class="form-control" placeholder="Everwood" required>
</div>
<div class="form-group">
    <label class="control-label" for="{{#if add}}add-{{/if}}email">E-Mail *</label>
    <input type="text" name="email" id="{{#if add}}add-{{/if}}email" class="form-control" placeholder="rufus@everwood.com" required>
</div>
<div class="form-group">
    <label class="control-label" for="{{#if add}}add-{{/if}}roles">Rollen *</label>
    <select id="{{#if add}}add-{{/if}}roles" name="roles" multiple required>
        {{#each role}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>
{{#if add}}
    <div class="form-group">
        <input id="create-silent" type="checkbox" name='silent' value="true">
        <label class="control-label" for="create-silent">Silent Creation - Keine E-Mail versenden</label>
    </div>

    <div class="silent-area">
        <div class="form-group">
            <label class="control-label" for="initial-password">Initiales Passwort *</label>
            <input type="password" name="initial-password" id="initial-password" class="form-control" placeholder="********" disabled required>
        </div>
    </div>
{{/if}}