{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/events/events.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/schools.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 no-padding">
                        <form class="search-wrapper" action="/accounts/search/" method="get">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control search-field" placeholder="Suche nach Accounts... (username/email eingeben)" name="q" />
                                <span class="input-group-btn">
                                            <button type="submit" class="btn btn-secondary">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                            </div>
                        </form>
                </div>
            </div>
        </div>


    {{/content}}
{{/extend}}
