{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/events/events.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/schools.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 no-padding">
                    {{> "lib/components/table" head=head body=body}}
                </div>
            </div>

            <div class="row">
                {{> "lib/components/pagination" settings=pagination }}
            </div>
        </div>

        <button class="btn btn-primary btn-create-school">Neuen Account erstellen</button>

        {{#embed "lib/components/modal-form" method="create" class="add-modal"}}
            {{#content "fields"}}
                {{> "accounts/forms/add-account"}}
            {{/content}}
        {{/embed}}
        {{#embed "lib/components/modal-form" method="patch" class="edit-modal"}}
            {{#content "fields"}}
                {{> "accounts/forms/add-account"}}
            {{/content}}
        {{/embed}}
        {{#embed "lib/components/modal-form" roles=roles method="delete" class="delete-modal"}}
            {{#content "fields"}}
                {{> "lib/components/delete-form-user"}}
            {{/content}}
        {{/embed}}
    {{/content}}
{{/extend}}
