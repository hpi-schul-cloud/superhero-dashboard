apiVersion: v1
kind: ConfigMap
metadata:
  name: shd-configmap
  namespace: {{ NAMESPACE }}
  labels:
    app: shd
data:
  BACKEND_URL: "http://api-svc:{{ PORT_SERVER }}/api/"
  SC_NAV_TITLE: "{{ SC_NAV_TITLE }}"
  HOST: "https://{{ DOMAIN }}"
  FEATURE_LEGACY_HYDRA_ENABLED: "{{ FEATURE_LEGACY_HYDRA_ENABLED|default(false, true) }}"
  FEATURE_CTL_TOOLS_ENABLED: "{{ FEATURE_CTL_TOOLS_ENABLED|default(false, true) }}"
  FEATURE_LTI_TOOLS_ENABLED: "{{ FEATURE_LTI_TOOLS_ENABLED|default(true, true) }}"
  FEATURE_SCHOOL_SANIS_USER_MIGRATION_ENABLED: "{{ FEATURE_SCHOOL_SANIS_USER_MIGRATION_ENABLED|default(false, true) }}"
  FEATURE_SHOW_OUTDATED_USERS: "{{ FEATURE_SHOW_OUTDATED_USERS|default(false, true) }}"
  FEATURE_ENABLE_LDAP_SYNC_DURING_MIGRATION: "{{ FEATURE_ENABLE_LDAP_SYNC_DURING_MIGRATION|default(false, true) }}"
