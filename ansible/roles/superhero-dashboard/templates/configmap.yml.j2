apiVersion: v1
kind: ConfigMap
metadata:
  name: shd-configmap
  namespace: {{ NAMESPACE }}
  labels:
    app: shd
data:
  BACKEND_URL: "http://api-svc:{{ PORT_SERVER }}/api/"
  SC_NAV_TITLE: "{{ SC_NAV_TITLE }}"
  HOST: "https://{{ DOMAIN }}"
  FEATURE_LEGACY_HYDRA_ENABLED: "{{ FEATURE_LEGACY_HYDRA_ENABLED|default(false, true) }}"
  FEATURE_CTL_TOOLS_ENABLED: "{{ FEATURE_CTL_TOOLS_ENABLED|default(false, true) }}"
  FEATURE_LTI_TOOLS_DISABLED: "{{ FEATURE_LTI_TOOLS_DISABLED|default(false, true) }}"
